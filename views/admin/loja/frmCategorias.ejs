<div class="contentwrapper"><!--Content wrapper-->

<div class="heading">

    <h3>Categorias de Produtos</h3>

    <ul class="breadcrumb">
        <li>
            <a href="#" class="tip" title="back to dashboard">
                <span class="icon16 icomoon-icon-screen-2"></span>
            </a>
            <span class="divider">
                <span class="icon16 icomoon-icon-arrow-right-2"></span>
            </span>
        </li>
        <li class="active">Cadastrar Categorias</li>
    </ul>

</div><!-- End .heading-->

<!-- Build page from here: Usual with <div class="row-fluid"></div> -->

<div class="row-fluid">

<div class="span12">

<div class="box">

<div class="title">

    <h4>
        <span>Cadastar Categorias de Produtos</span>
    </h4>

</div>
<div class="content">

<form class="form-horizontal" id="categoriaForm" name="categoriaForm" novalidate data-ng-init="get()">

<div class="form-row row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <label class="form-label span3" for="name">Nome Categoria</label>
            <input class="span9" id="name" name="name" type="text" placeholder="Digite o nome da Categoria" data-ng-model="categoria.name" data-ng-minlength="4" required/>

            <div ng-show="categoriaForm.name.$dirty && categoriaForm.name.$invalid" class="formValidacao">
                <span class="erro" ng-show="categoriaForm.name.$error.required">Digite o nome da Categoria.</span>
                <span class="erro" ng-show="categoriaForm.name.$error.minlength">Nome de 4 digitos ou mais!</span>
            </div>
        </div>

    </div>
</div>
<div class="form-row row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <div class="form-actions">
                <div class="span3"></div>
                <div class="span9 controls">
                    <button type="submit" class="btn marginR10" data-ng-click="adicionar(categoria)" data-ng-disabled="categoriaForm.$invalid">Salvar</button>
                    <button data-ng-click="cancelar()" class="btn btn-danger" >Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
</form>

</div>

</div><!-- End .box -->

</div><!-- End .span12 -->

</div><!-- End .row-fluid -->


<!-- Page end here -->

</div><!-- End contentwrapper -->