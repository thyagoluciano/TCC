<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <form role="form" class="form-signin">
            <h2 class="form-signin-heading">Please sign in</h2>
            <input type="email" autofocus="" required="" placeholder="Email address" class="form-control" data-ng-model="usuario.email">
            <input type="password" required="" placeholder="Password" class="form-control" data-ng-model="usuario.password">
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            <button type="submit" class="btn btn-lg btn-primary btn-block" data-ng-click="login(usuario)">Sign in</button>
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>